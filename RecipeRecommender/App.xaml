<Application x:Class="RecipeRecommender.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RecipeRecommender">
    <!--    StartupUri="MainWindow.xaml"   => Remove this startup uri and control our own startup in the code-behind     -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Order is import-->
                <ResourceDictionary Source="Style/Colors.xaml"/>
                <ResourceDictionary Source="Style/Fonts.xaml"/>
                <ResourceDictionary Source="Style/Buttons.xaml"/>
                <ResourceDictionary Source="Style/Texts.xaml"/>
                <ResourceDictionary Source="Style/Scrolls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
